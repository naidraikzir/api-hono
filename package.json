{
	"name": "api-hono",
	"version": "0.2.0",
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"db:generate": "bunx drizzle-kit generate:sqlite",
		"db:push": "bunx drizzle-kit push:sqlite",
		"db:studio": "bunx drizzle-kit studio",
		"prepare": "husky install"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.1.8",
		"better-sqlite3": "^8.6.0",
		"drizzle-orm": "^0.28.6",
		"drizzle-zod": "^0.5.1",
		"file-type": "^18.5.0",
		"glob": "^10.3.5",
		"hono": "^3.6.0",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.2.2",
		"bun-types": "1.0.3",
		"drizzle-kit": "^0.19.13",
		"husky": "^8.0.0",
		"lint-staged": "^14.0.1"
	},
	"trustedDependencies": ["better-sqlite3"],
	"lint-staged": {
		"*.{ts,js}": "bunx biome check --apply-unsafe ./src",
		"**/*": "bunx biome format --write --files-ignore-unknown=true ./src"
	}
}
